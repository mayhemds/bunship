# BunShip API Environment Variables

# Node Environment
NODE_ENV=development

# API Configuration
PORT=3000
API_URL=http://localhost:3000
FRONTEND_URL=http://localhost:5173
CORS_ORIGINS=http://localhost:5173,http://localhost:3000

# JWT Secrets (generate with: openssl rand -base64 32)
JWT_SECRET=your-jwt-secret-here
JWT_REFRESH_SECRET=your-jwt-refresh-secret-here

# Database (Turso/libSQL)
# For local development, use: file:local.db
# For production, use your Turso URL and auth token
TURSO_DATABASE_URL=file:../../local.db
TURSO_AUTH_TOKEN=

# Redis (required for background jobs)
REDIS_URL=redis://localhost:6379

# Email (Resend)
RESEND_API_KEY=re_xxxxxxxxxxxx

# S3 Storage (for file uploads)
# Option 1: AWS S3
AWS_REGION=us-east-1
AWS_ACCESS_KEY_ID=your_access_key
AWS_SECRET_ACCESS_KEY=your_secret_key
S3_BUCKET=bunship-files

# Option 2: S3-Compatible (MinIO, Cloudflare R2, DigitalOcean Spaces, etc.)
# Uncomment and configure these if using S3-compatible service
# S3_ENDPOINT=https://s3.example.com
# S3_FORCE_PATH_STYLE=true

# File Upload Configuration
MAX_FILE_SIZE=52428800  # 50 MB in bytes

# Stripe (for billing)
STRIPE_SECRET_KEY=sk_test_xxxxxxxxxxxx
STRIPE_WEBHOOK_SECRET=whsec_xxxxxxxxxxxx
STRIPE_PUBLISHABLE_KEY=pk_test_xxxxxxxxxxxx

# Monitoring & Logging
LOG_LEVEL=info

# Rate Limiting
RATE_LIMIT_ENABLED=true
RATE_LIMIT_MAX=100
RATE_LIMIT_WINDOW_MS=60000

# Company Information (for emails and branding)
COMPANY_NAME=Your Company Inc.
COMPANY_EMAIL=hello@bunship.com
COMPANY_SUPPORT_EMAIL=support@bunship.com
