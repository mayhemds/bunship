# ============================================
# APPLICATION
# ============================================
NODE_ENV=development
PORT=3000
API_URL=http://localhost:3000
FRONTEND_URL=http://localhost:5173
CORS_ORIGINS=http://localhost:5173,http://localhost:3000

# ============================================
# DATABASE (Turso)
# ============================================
TURSO_DATABASE_URL=file:./local.db
# TURSO_DATABASE_URL=libsql://your-db.turso.io
# TURSO_AUTH_TOKEN=your-auth-token

# ============================================
# REDIS
# ============================================
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_URL=redis://localhost:6379

# ============================================
# JWT
# ============================================
JWT_SECRET=your-super-secret-jwt-key-min-32-chars-change-in-production
JWT_REFRESH_SECRET=your-refresh-secret-key-min-32-chars-change-in-production

# ============================================
# STRIPE
# ============================================
STRIPE_SECRET_KEY=sk_test_xxx
STRIPE_WEBHOOK_SECRET=whsec_xxx
# Leave these commented to use built-in defaults for development.
# Set them when you create real Stripe prices for production.
# STRIPE_PRO_MONTHLY_PRICE_ID=price_xxx
# STRIPE_PRO_YEARLY_PRICE_ID=price_xxx
# STRIPE_ENTERPRISE_MONTHLY_PRICE_ID=price_xxx
# STRIPE_ENTERPRISE_YEARLY_PRICE_ID=price_xxx

# ============================================
# EMAIL (Resend)
# ============================================
RESEND_API_KEY=re_xxx
RESEND_FROM_EMAIL="BunShip <hello@bunship.com>"

# ============================================
# FILE STORAGE (S3 Compatible)
# ============================================
S3_ENDPOINT=https://s3.amazonaws.com
S3_BUCKET=your-bucket
AWS_ACCESS_KEY_ID=xxx
AWS_SECRET_ACCESS_KEY=xxx
AWS_REGION=us-east-1
S3_FORCE_PATH_STYLE=false
MAX_FILE_SIZE=52428800

# ============================================
# OAUTH (Optional)
# ============================================
# GOOGLE_CLIENT_ID=
# GOOGLE_CLIENT_SECRET=
# GITHUB_CLIENT_ID=
# GITHUB_CLIENT_SECRET=

# ============================================
# ADMIN / CRON
# ============================================
CRON_SECRET=your-cron-secret
# MAINTENANCE_MODE=false
