{
  "name": "bunship",
  "version": "1.0.0",
  "description": "The fastest SaaS boilerplate built with Bun + Elysia",
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "dev": "bun run --filter=./apps/api dev",
    "dev:all": "turbo run dev",
    "build": "turbo run build",
    "start": "bun run apps/api/dist/index.js",
    "lint": "turbo run lint",
    "lint:fix": "turbo run lint:fix",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "typecheck": "turbo run typecheck",
    "test": "turbo run test",
    "test:unit": "bun test --filter unit",
    "test:integration": "bun test --filter integration",
    "test:coverage": "bun test --coverage",
    "db:setup": "bun run db:migrate && bun run db:seed",
    "db:generate": "bun run --filter=@bunship/database generate",
    "db:migrate": "bun run --filter=@bunship/database migrate",
    "db:push": "bun run --filter=@bunship/database push",
    "db:seed": "bun run --filter=@bunship/database seed",
    "db:studio": "bun run --filter=@bunship/database studio",
    "db:reset": "bun run --filter=@bunship/database reset",
    "eden:generate": "bun run scripts/generate-eden.ts",
    "docker:dev": "docker-compose -f docker/docker-compose.yml up",
    "docker:build": "docker build -f docker/Dockerfile.api -t bunship-api .",
    "clean": "turbo run clean && rm -rf node_modules"
  },
  "devDependencies": {
    "@types/bun": "latest",
    "prettier": "^3.2.0",
    "turbo": "^2.8.7",
    "typescript": "^5.4.0"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "packageManager": "bun@1.3.7"
}
