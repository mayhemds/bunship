{
  "compilerOptions": {
    "target": "ES2022",
    "module": "ESNext",
    "moduleResolution": "bundler",
    "lib": ["ES2022"],
    "jsx": "react-jsx",
    "types": ["@types/bun"],
    "strict": true,
    "noEmit": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noUncheckedIndexedAccess": true,
    "noImplicitOverride": true,
    "noPropertyAccessFromIndexSignature": false,
    "exactOptionalPropertyTypes": false,
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "baseUrl": ".",
    "paths": {
      "@bunship/config": ["./packages/config/src"],
      "@bunship/database": ["./packages/database/src"],
      "@bunship/database/*": ["./packages/database/src/*"],
      "@bunship/emails": ["./packages/emails/src"],
      "@bunship/eden": ["./packages/eden/src"],
      "@bunship/utils": ["./packages/utils/src"]
    }
  },
  "exclude": ["node_modules", "dist", "**/*.test.ts"]
}
